<h1>(present)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @tweet do |f| %>

<div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
</div>

<div class="field">
    <%= f.label :photo %>
    </p><%= f.file_field :photo %></p>
</div>

<div class="field">
    <%= f.label :name  %>
    <%= f.text_area :name, :size => "30x2" %>
</div>

<div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, :size => 30 %>
</div>

<div class="field">
    <%= f.label :link  %>
    <%= f.text_area :link, :size => "30x2" %>
</div>

<%= f.submit "投稿する" %>

<% end %>

<%= link_to "一覧に戻る", tweets_path %>